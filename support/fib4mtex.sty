\newcounter{num}
\newcommand\mfrac[2]{%
  \typeout{#1}%
  \typeout{#2}%
  \setcounter{num}{0}%
  \addtocounter{num}{-1}%
  \LAtemplate#1\empty%
  \typeout{\thenum}%
  \def\LAnumerator{\StrSubstitute{\@firstofone#1}{,}{&}}%
  \def\LAdenominator{\StrSubstitute{\@firstofone#2}{,}{&}}%
  \begingroup%
  \renewcommand\arraystretch{0}%
  \arraycolsep=2pt%
%  \def\sep{&}%
  \begin{array}{@{}*{\value{num}}{c}c@{}}%
    \Tstrut\LAnumerator\Bstrut\\\hline
    \Tstrut\LAdenominator\Bstrut
  \end{array}%
  \endgroup%
}
